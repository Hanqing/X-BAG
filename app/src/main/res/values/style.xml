<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Toolbar颜色 也是多任务切换的标题颜色-->
        <item name="colorPrimary">@color/cyan_base</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/cyan_base_dark</item>
        <!--下划线 提示等一些组件的 着色-->
        <item name="colorAccent">@color/cyan_base_dark</item>

        <!--ActionMode出现时 覆盖ActionBar-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <!--<style name="Animation" parent="@android:style/Animation">-->
    <!--&lt;!&ndash;窗体进入动画&ndash;&gt;-->
    <!--<item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>-->
    <!--&lt;!&ndash;窗体退出动画&ndash;&gt;-->
    <!--<item name="android:windowExitAnimation">@android:anim/slide_in_left</item>-->
    <!--</style>-->

    <!--侧滑透明-->
    <style name="TranslucentTheme" parent="AppTheme">
        <!--theme透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--状态栏透明 DrawerLayout-->
    <style name="TranslucentStatusTheme" parent="AppTheme">
        <!--状态栏透明-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="progressBarColor">
        <item name="colorAccent">@color/cyan_base</item>
    </style>

    <style name="Widget" />

    <style name="Widget.ScannerSubtitle">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>