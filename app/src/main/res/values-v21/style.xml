<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@color/cyan_base_dark</item>
        <!--Toolbar颜色 也是多任务切换的标题颜色-->
        <item name="colorPrimary">@color/cyan_base</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/cyan_base_dark</item>
        <!--下划线 提示等一些组件的 着色-->
        <item name="colorAccent">@color/cyan_base_dark</item>

    </style>

    <!--状态栏透明 DrawerLayout-->
    <style name="TranslucentStatusTheme" parent="AppTheme">
        <!--drawablelayout覆盖在toolbar上-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--状态栏透明-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>